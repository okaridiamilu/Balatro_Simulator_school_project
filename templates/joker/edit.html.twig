{% extends "base.html.twig" %}

{% block title %}Modifier le Joker - BALATRO SIMULATOR{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mb-4">✏️ Modifier le Joker : {{ joker.nom }}</h1>
            
            {# Afficher les messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    ✅ {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
            
            <div class="card shadow">
                <div class="card-body p-4">
                    {{ form_start(jokerForm, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                    
                    {# Nom du joker #}
                    <div class="mb-3">
                        {{ form_row(jokerForm.nom) }}
                    </div>
                    
                    {# État et Rareté en 2 colonnes #}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(jokerForm.etat) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(jokerForm.rarete) }}
                        </div>
                    </div>
                    
                    {# Description #}
                    <div class="mb-3">
                        {{ form_row(jokerForm.description) }}
                    </div>
                    
                    {# Effet #}
                    <div class="mb-3">
                        {{ form_row(jokerForm.effet) }}
                    </div>
                    
                    {# Image #}
                    <div class="mb-3">
                        {{ form_row(jokerForm.image) }}
                    </div>
                    
                    {# Boutons #}
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">
                            ✏️ Enregistrer les modifications
                        </button>
                        <a href="{{ path('about') }}" class="btn btn-secondary btn-lg">
                            ← Annuler
                        </a>
                    </div>
                    
                    {{ form_end(jokerForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
